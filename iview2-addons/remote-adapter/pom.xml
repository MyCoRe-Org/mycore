<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.mycore.iview2</groupId>
    <artifactId>iview2-addons</artifactId>
    <version>2017.01-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <groupId>org.mycore.iview2</groupId>
  <artifactId>remote-adapter</artifactId>
  <name>MyCoRe IView2 Remote Adapter</name>
  <description>Interface to IView 2 Web Services</description>
  <properties>
    <!-- Code is generated -->
    <forbiddenapis.skip>true</forbiddenapis.skip>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.jvnet.jax-ws-commons</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.mycore</groupId>
            <artifactId>mycore-iview2</artifactId>
            <version>${project.version}</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <id>consume-wsdl</id>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <configuration>
              <keep>true</keep>
              <verbose>true</verbose>
              <wsdlDirectory>${project.basedir}/../../mycore-iview2/target/jaxws/wsgen/wsdl</wsdlDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <additionalparam>${javadoc.doclint.none}</additionalparam>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <additionalparam>${javadoc.doclint.none}</additionalparam>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
  <dependencies />
  <profiles>
    <profile>
      <id>java8-disable-strict-javadoc</id>
      <activation>
        <jdk>[1.8,)</jdk>
      </activation>
      <properties>
        <javadoc.doclint.none>-Xdoclint:none</javadoc.doclint.none>
      </properties>
    </profile>
  </profiles>
</project>
