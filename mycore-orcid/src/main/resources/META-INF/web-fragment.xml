<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd" version="3.0" metadata-complete="true"
>
  <!-- **************************************************************** -->
  <!--                     MyCoRe ORCID integration                     -->
  <!-- **************************************************************** -->

  <servlet id="OAuthServlet">
    <servlet-name>OAuthServlet</servlet-name>
    <servlet-class>org.mycore.orcid.oauth.MCROAuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OAuthServlet</servlet-name>
    <url-pattern>/orcid</url-pattern>
  </servlet-mapping>

  <servlet id="WorkSyncServlet">
    <servlet-name>WorkSyncServlet</servlet-name>
    <servlet-class>org.mycore.orcid.works.MCRWorkSyncServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WorkSyncServlet</servlet-name>
    <url-pattern>/servlets/WorkSyncServlet</url-pattern>
  </servlet-mapping>

</web-fragment>
