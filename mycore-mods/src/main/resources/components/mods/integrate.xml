<project name="mods" xmlns:mcr="antlib:org.mycore.buildtools">
  <import file="../../integrate.xml" />
  <!-- - - - - - - - - - - - - - - - - - 
	          target: config                      
	         - - - - - - - - - - - - - - - - - -->
  <target name="config">
    <mcr:config action="addInclude"
                propertyfile="${build.config}/mycore.properties"
                key="MCR.CLI.Classes.Internal"
                value="org.mycore.mods.MCRMODSCommands" />
    <mcr:config action="addInclude"
                propertyfile="${build.config}/mycore.properties"
                key="MCR.URIResolver.xslIncludes.objectTypes"
                value="mods.xsl" />
    <mcr:config action="addInclude"
                propertyfile="${build.config}/mycore.properties"
                key="MCR.URIResolver.xslImports.solr-document"
                value="mods-solr.xsl" />
  </target>
</project>