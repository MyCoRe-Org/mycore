<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>mycore</artifactId>
    <groupId>org.mycore</groupId>
    <version>2013.09-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>mycore-mods</artifactId>
  <name>MyCoRe MODS</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.mycore.plugins</groupId>
        <artifactId>datamodel-plugin</artifactId>
        <version>0.3</version>
        <executions>
          <execution>
            <goals>
              <goal>schema</goal>
              <goal>swf-pages</goal>
              <goal>copy-editor</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <layoutDefinitions>
            <layoutDefinition>
              <objectType>mods</objectType>
              <layouts>
                <layout>thesis</layout>
                <layout>thesis-admin</layout>
                <layout>report</layout>
                <layout>report-admin</layout>
                <layout>av</layout>
                <layout>av-admin</layout>
                <layout>confpro</layout>
                <layout>confpro-admin</layout>
                <layout>confpub</layout>
                <layout>confpub-admin</layout>
                <layout>chapter</layout>
                <layout>chapter-admin</layout>
                <layout>book</layout>
                <layout>book-admin</layout>
                <layout>journal</layout>
                <layout>journal-admin</layout>
                <layout>article</layout>
                <layout>article-admin</layout>
              </layouts>
            </layoutDefinition>
          </layoutDefinitions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.mycore</groupId>
      <artifactId>mycore-base</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jdom</groupId>
      <artifactId>jdom2</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.mycore</groupId>
      <artifactId>mycore-base</artifactId>
      <version>${project.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
