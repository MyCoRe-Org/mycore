  <artifactId>mycore-mods</artifactId>
  <name>MyCoRe MODS</name>
  <properties>
    <manifest.priority>50</manifest.priority>
    <pmd.failOnViolation>false</pmd.failOnViolation>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.mycore.plugins</groupId>
        <artifactId>datamodel-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>schema</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
